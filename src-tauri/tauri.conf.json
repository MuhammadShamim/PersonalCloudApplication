{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "personal-cloud-application",
  "version": "1.0.0",
  "identifier": "com.akhtar.personal-cloud-application",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Personal Cloud App",
        "label": "main",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "width": 400,
        "height": 300,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/api"
    ]
  }
}
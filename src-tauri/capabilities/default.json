{
  "$schema": "https://schema.tauri.app/capability/1",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/api",
          "args": true,
          "sidecar": true
        }
      ]
    }
  ]
}